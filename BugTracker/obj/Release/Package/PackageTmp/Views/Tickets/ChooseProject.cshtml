@model BugTracker.Models.ChooseProjectViewModel
@{
    ViewBag.Title = "ChooseProject";
}

<div class="col-md-4 col-md-offset-4">
    <div class="box-info shadow">
        <h2>Choose Project</h2>
        <div class="box-content">
            @using (Html.BeginForm("ChooseProject", "Tickets"))
            {
                @Html.AntiForgeryToken()
                <p>Please select the project that the new ticket will belong to.</p>
                @Html.DropDownListFor(m => m.SelectedProjectId, Model.Projects, "Select Project", new { htmlAttributes = new { @class = "form-control" } })
                <input type="submit" class="btn btn-warning" value="Choose and Continue" />
                <a class="cancel btn btn-warning">Cancel</a>
            }
        </div>
    </div>
</div>

