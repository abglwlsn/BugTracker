@model BugTracker.Models.UserInfoViewModel
@using BugTracker.HelperExtensions;

<div class="row">
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>Email</dt>
            <dd>@Model.User.Email</dd>
            <dt>Roles</dt>
            <dd>@Model.User.Id.ListUserRoles()</dd>
        </dl>
    </div>
    @if (Model.User.Id.UserIsInRole("Developer"))
            {
        <div class="col-md-4">
            <table>
                <thead>
                    <tr>
                        <th>Ticket Name</th>
                        <th>Project</th>
                        <th>Priority</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.AssignedTickets.Count() == 0)
                    {
                        <tr><td>User has no tickets.</td></tr>
                    }
                    else
                    {
                        foreach (var ticket in Model.AssignedTickets)
                        {
                            <tr>
                                <td>@ticket.Name</td>
                                <td>@ticket.Project.Name</td>
                                <td>@ticket.Priority.Name</td>
                                <td>@ticket.Description</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        if (Model.User.Id.UserIsInRole("Developer") || Model.User.Id.UserIsInRole("Program Manager"))
        {
            <div class="col-md-4">
                <table>
                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>Deadline</th>
                            <th>Description</th>
                            <th># of Tickets</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.AssignedProjects.Count() == 0)
                        {
                            <tr><td>User has no projects.</td></tr>
                        }
                        else
                        {
                            foreach (var project in Model.AssignedProjects)
                            {
                                <tr>
                                    <td>@project.Name</td>
                                    <td>@project.Deadline.FormatDateTimeOffset()</td>
                                    <td>@project.Description</td>
                                    <td>@project.Tickets.Count()</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>
