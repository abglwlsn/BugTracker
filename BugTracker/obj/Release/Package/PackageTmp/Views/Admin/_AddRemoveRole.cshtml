@model BugTracker.Models.AddRemoveRolesViewModel

<div id="partial-right" class="box-info shadow">
    <h2>Reassign Roles for @Model.User.FullName</h2>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
                @Html.ListBox("SelectedRoles", Model.Roles, new { @class = "chosen-select" })
            <input type="submit" class="btn btn-dark" value="Update User Roles" />
        }

</div>
