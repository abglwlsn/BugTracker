@model IEnumerable<BugTracker.Models.Ticket>
@using BugTracker.HelperExtensions
@{
    ViewBag.Title = "Index";
}

<div id="allTickets" class="box-info shadow">
    <h2><strong>All</strong> Tickets</h2>
<div id="headerButtons">
    <a href=@Url.Action("Create", "Tickets") class="btn btn-warning">Create New Ticket</a>
    @if (User.IsInRole("Project Manager") || User.IsInRole("Developer"))
    {<a href=@Url.Action("UserTickets") class="btn btn-warning">View My Tickets</a>    }
    </div>


    <table id="allTickets" class="data-table hover table-striped compact">
        <thead>
            <tr>
                <th>Name</th>
                <th>Project</th>
                <th>Assigned To</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Type</th>
                <th>Phase</th>
                <th>Submitted By</th>
                <th>On</th>
                <td>Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.Name</td>
                    @if (ticket.Project == null)
                    { <td>unassigned</td>}
                    else
                    { <td>@ticket.Project.Name</td> } 
                    @if (ticket.AssignedToId == null)
                    { <td>unassigned</td> }
                    else
                    { <td>@ticket.AssignedTo.FullName</td> } 
                    @if (ticket.Priority == null)
                    { <td>unassigned</td> }
                    else
                    { <td>@ticket.Priority.Name</td> } 
                    @if (ticket.Status == null)
                    {
                    <td>unassigned</td> }
                    else
                    { <td>@ticket.Status.Name</td> } 
                    @if (ticket.Action == null)
                    {
                    <td>unassigned</td> }
                    else
                    { <td>@ticket.Action.Name</td> } 
                    @if (ticket.Phase == null)
                    { <td>unassigned</td> }
                    else
                    { <td>@ticket.Phase.Name</td> }                                         
                    <td>@ticket.Submitter.FullName</td>
                    <td>@ticket.Submitted.FormatDateTimeOffsetCondensed()</td>
                    <td><a href=@Url.Action("Details", "Tickets", new { id = ticket.Id }) class="btn btn-warning"><i class="fa fa-eye"></i></a>
                    <a href=@Url.Action("Edit", "Tickets", new { id = ticket.Id }) class="btn btn-warning"><i class="fa fa-edit"></i></a>
                </tr>
            }
        </tbody>
    </table>
</div>
