
@{
    Layout = "~/Views/Shared/_AnonLayout.cshtml";
}

<div class="row">
    <div class="col-md-3 full-content-xsmall animated fadeInDownBig">
        <div class="login-wrap">
            <a class="section-scroll btn btn-warning btn-block btn-lg" href="#about">Learn More</a>
        </div>
    </div>
    <div class="col-md-3 col-md-offset-6 full-content-xsmall animated fadeInDownBig">
        <div class="login-wrap">
            <a href=@Url.Action("Login", "Account") class="btn btn-warning btn-block"><i class="fa fa-unlock"></i> Login</a>
            <a href=@Url.Action("Register", "Account") class="btn btn-warning btn-block"><i class="fa fa-rocket fa-inverse"></i> Register</a>
        </div>
        <div class="login-wrap">
            <h4>Demo application as:</h4>
            @using (Html.BeginForm("LoginGuestSubmitter", "Account"))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-dark btn-block">Submitter</button>
            }
            @using (Html.BeginForm("LoginGuestDeveloper", "Account"))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-dark btn-block">Developer</button>
            }
            @using (Html.BeginForm("LoginGuestProjectManager", "Account"))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-dark btn-block">Project Manager</button>
            }
            @using (Html.BeginForm("LoginGuestAdministrator", "Account"))
            {
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-dark btn-block">Administrator</button>
            }
        </div>
    </div>
    </div>

<div class="row">
    <div id="title" class="col-md-5">
        <h4 style="color:#f0ad4e">Welcome to</h4>
        <h1 class="accent app-title text-right">Bug Sleuth</h1>
    </div>
</div>